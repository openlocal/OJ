<h1>New Job Request</h1>

<% semantic_form_for @job_request do |form| %>
  <% form.inputs do %>
    <%= form.input :title %>
    <%= form.input :description %>
    <% unless @user %>
  	<%= form.input :helpee_name, :label => "Your name"  %>
  	<%= form.input :email_address %>
    <% end %>
    <%= form.input :location %>
    <%= form.input :duration, :as => :select, :collection => {"1 hour" => 1, "2 hours" => 2, "3 hours" => 3, "4 hours" => 4, "5 hours" => 5, "1 day" => 8} %>
  <% end %>
  
  <% form.buttons do %>
    <%= form.commit_button "Ask for help" %>
  <% end %>
<% end %>

<%= link_to 'Back', job_requests_path %>