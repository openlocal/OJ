<div class="my_profile" style="float: left; width: 400px">
<h1><%= @profile.name %>'s Profile</h1>
<div class="real_name">
Name:	<%= @profile.real_name %>
</div>
<% if @profile == current_user %>
  <div class="email">
  Email:	<%= @profile.email %>
  </div>
<% end %>

<div class="skills">
Skills: <%= @profile.skills %>
</div>
<div class="reason">
Reasons for helping: <%= @profile.reason%>
</div>
<div class="my_job">
Day job: <%= @profile.my_job %>
</div>
<div class="website">
Website: <%= @profile.website %>
</div>
<div class="about_me">
About: <%= @profile.about_me %>
</div>

<% if @profile == current_user %>
  <%= link_to 'Edit', edit_user_path(@profile) %>
  <ul>
    <% @profile.job_requests.each do |job| %>
      <li><%= link_to job.title, job %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div style="float: left"><%= image_tag "http://www.gravatar.com/avatar/" + Digest::MD5.hexdigest(@profile.email) + "?d=identicon&r=g" %></div>
