<div class="left">
  <div id="opportunities">
 		<h3>Upcoming Opportunities</h3>
 		
 		<% @open.each do |job| %>
    	<div>
    	  <span class="duration-box duration<%= job.duration %>"><%= job.duration %></span>
    	  <h4><%= link_to job.title, job %></h4>
        <%= job.description %></p>
        <%= link_to "More info...", job, :class => 'readmore' %>
				<div class="spacer"></div>
			</div>
		<% end %>
    </div><!-- end #opportunities -->        
 </div><!-- end .left -->
<div class="left">
	   <div id="recent_helpers">
      	<h3>Recent Helpers</h3>
      	
      	<% @completed.each do |job| %>
      	  <%= gravatar job.feedback.help_offer.user.email, 'floatLeft avatar' %>
      		<p><span class="name"><%= job.feedback.help_offer.user.name %></span><br /><%= job.title %></p>
	 			<div class="spacer">&nbsp;</div>
	 			<% end %>
 	</div><!-- end #recent_helpers -->
       <div id="thankyou_notes">
      	<h3>Thank You Notes</h3>
      	<% @feedbacks.each do |feedback| %>
      	  <%= gravatar feedback.job_request.user.email, 'floatLeft avatar' %>
        	<p><strong><%= feedback.job_request.title %></strong><br />
          <%= feedback.notes %></p>
 			 	  <%= link_to "More info...", feedback.job_request, :class => 'readmore' %>
          <div class="spacer"></div>
        <% end %>
       </div><!-- end #thankyou_notes -->
</div>